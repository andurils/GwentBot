<Window x:Class="GwentBot.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GwentBot.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" Background="DimGray" ResizeMode="CanMinimize" >
    <Grid>
        <StackPanel>
            <!--游戏开始-->
            <Button x:Name="btStart" Height="40" Click="BtStart_Click" Margin="0,0,0,0" Content="start"/>
            <!--游戏结束-->
            <Button x:Name="btCheckVisability" Click="Button_Click" Height="35"   Content="stop" Margin="0,0,0,0"/>
            <!--游戏结束-->
            <Button x:Name="btSetTopMost" Click="btSetTopMost_Click" Height="35"   Content="置顶" Margin="0,0,0,0"/>
            
            <TextBlock x:Name="tbGlobalStateList" Height="283" Margin="0,0,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>