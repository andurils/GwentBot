<Window x:Class="GwentBot.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GwentBot.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200" Background="DimGray" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <!--游戏开始-->
            <Button Name="btStart" Height="70" Click="BtStart_Click">start</Button>
            <!--检查游戏版本-->
            <Button Name="btCheckVisability" Click="Button_Click">stop</Button>
            <TextBlock Name="tbGlobalStateList" Height="33" Margin="0,0,-0.4,0" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
    </Grid>
</Window>